<config>
  <app>
    <title>Game Development template</title>
    <maxFrameDuration value="16"/>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="128"/>
    <fx volume="128"/>
  </audio>

  <scene>
    <map path="Assets/Maps/" name="MapTemplate.tmx"/>
	<player x="400" y="352" texturepath="Assets/Textures/platformer.png">
		  <idle animspeed ="0.5f" loop="true">
			  <pushback x="0" y="0" width="48" height="48"/>
			  <pushback x="48" y="0" width="48" height="48"/>
			  <pushback x="96" y="0" width="48" height="48"/>
			  <pushback x="144" y="0" width="48" height="48"/>
			  <pushback x="192" y="0" width="48" height="48"/>
			  <pushback x="240" y="0" width="48" height="48"/>
			  <pushback x="0" y="48" width="48" height="48"/>
			  <pushback x="48" y="48" width="48" height="48"/>
			  <pushback x="96" y="48" width="48" height="48"/>
			  <pushback x="144" y="48" width="48" height="48"/>
		  </idle>
		  <run animspeed ="0.5f" loop="true">
			  <pushback x="0" y="192" width="48" height="48"/>
			  <pushback x="48" y="192" width="48" height="48"/>
			  <pushback x="96" y="192" width="48" height="48"/>
			  <pushback x="144" y="192" width="48" height="48"/>
			  <pushback x="192" y="192" width="48" height="48"/>
			  <pushback x="0" y="240" width="48" height="48"/>
			  <pushback x="48" y="240" width="48" height="48"/>
		  </run>
		  <jump animspeed =" 0.5f" loop="false">
			  <pushback x="0" y="96" width="48" height="48"/>
			  <pushback x="48" y="96" width="48" height="48"/>
			  <pushback x="96" y="96" width="48" height="48"/>
		  </jump>
		  <fall animspeed =" 0.5f" loop="false">
			  <pushback x="0" y="144" width="48" height="48"/>
			  <pushback x="48" y="144" width="48" height="48"/>
			  <pushback x="96" y="144" width="48" height="48"/>
			  <pushback x="144" y="144" width="48" height="48"/>
			  <pushback x="192" y="144" width="48" height="48"/>
			  <pushback x="240" y="144" width="48" height="48"/>
			  <pushback x="144" y="96" width="48" height="48"/>
			  <pushback x="192" y="96" width="48" height="48"/>
			  <pushback x="240" y="96" width="48" height="48"/>
		  </fall> 
	</player>
    <item x="256" y="515" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="416" y="512" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="384" y="352" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="200" y="672" texturepath="Assets/Textures/goldCoin.png"/>
    <item x="500" y="672" texturepath="Assets/Textures/goldCoin.png"/>
  </scene>
  
</config>
